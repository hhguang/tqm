<div class="well" >
<%= form_for @user ,:html=>{:class=>' form-horizontal'} do |f| -%>
    <fieldset>
    <legend>用户信息</legend>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">用户名</label>
      <div class="col-sm-10">
        <%= f.text_field :login,:class=>'input-xlarge form-control'%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">姓名</label>
      <div class="col-sm-10">
        <%= f.text_field :name,:class=>'input-xlarge form-control'%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">密码</label>
      <div class="col-sm-10">
        <%= f.password_field :password,:class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">密码确认</label>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation,:class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">邮箱</label>
      <div class="col-sm-10">
        <%= f.text_field :email,:class=>'input-xlarge form-control'%>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label" for="tel">手机号码</label>
      <div class="col-sm-10">
        <%= f.text_field :telephone,:class=>'input-xlarge form-control'%>
      </div>
    </div>
    <% if current_user.is_s_admin? %>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="login">学校</label>
      <div class="col-sm-10">
        <%= collection_select :user, :school_id,School.all, :id,:name,{:include_blank =>true},:class=>"form-control" %>
        <p class="help-block">此选项管理员留空</p>
      </div>

    </div>
    
    <div class="form-group">
            <label class="col-sm-2 control-label " for="optionsCheckbox">是否管理员</label>
            <div class="col-sm-10">
              <label class="checkbox">
                <%= f.check_box :is_admin %>
              </label>
              <p class="help-block">区县教研室账号须设置为管理员，然后在下面选择区县</p>
            </div>
          </div>
    <div class="form-group">
      <label class="col-sm-2 control-label " for="qx">区县教研室</label>
      <div class="col-sm-10">
        <%= collection_select :user, :qx_id,Qx.all, :id,:name,{:include_blank=>true},:class=>"form-control"%>
        <p class="help-block">此选项系统管理员留空，区县教研室账号必须选</p>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label " for="subjects">教研员</label>
      <div class="col-sm-10">        
        
        <%= f.select :subjects,['语文','数学','文科数学','理科数学','英语','政治','历史','地理','物理','化学','生物'], {include_blank: true}, :multiple => true,:size=>12,:class=>"form-control" %>
        <p class="help-block">此选项管理员留空，可选择多个学科</p>
      </div>
    </div>

    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">保存</button>
            <%= link_to '取消',users_path %>
      </div>
    </div>


    </fieldset>
<% end -%>
</div>