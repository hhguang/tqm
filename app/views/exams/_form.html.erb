

<div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">项目设置</h4>
        </div>
        <div class="modal-body" style="padding-left:40px;padding-right:40px;">
             <%= simple_form_for(@exam,:remote=>true ) do |f| %>
              <%= f.error_notification %>              
                
                <%= f.input :name,:label=>"名称" %>
                <%= f.input :exam_type,collection: Exam::EXAM_TYPES,:label=>"类型" %>
                <%= f.input :brief,:label=>"简介" ,:input_html=>{ :rows=>"2" } %>
                
              

              <div class="form-group">
                <%= f.button :submit,:value=>"保存" %>
              </div>
            <% end %>
