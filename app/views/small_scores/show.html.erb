<div class="panel panel-default">
  <div class="panel-heading">年级科目</div>
  <table class="table table-bordered">
    <% (0..4).each do |j|%>
    <tr>
      <td>题号</td>
      <% (1..15).each do |i| %>
      <td><%= j*15+i %></td>
      <% end %>
    </tr>
    <tr>
      <td>平均分</td>
      <% (1..15).each do |i| %>
      <td><input type="text" size=2 /></td>
      <% end %>
    </tr>
    <tr>
      <td>得分率</td>
      <% (1..15).each do |i| %>
      <td><input type="text" size=2 /></td>
      <% end %>
    </tr>
    <% end %>
