  <li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      高一 <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <% Exam::SUBJECTS[0][0][:name].each do |subject| %>
